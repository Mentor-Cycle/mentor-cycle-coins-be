{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
        "**/*.{js,jsx,ts,tsx}",
        "!**/*.module.{js,jsx,ts,tsx}",
        "!**/*.dto.{js,jsx,ts,tsx}",
        "!**/*.entity.{js,jsx,ts,tsx}",
        "!**/*.enum.{js,jsx,ts,tsx}",
        "!**/*.mock.{js,jsx,ts,tsx}",
        "!**/*.model.{js,jsx,ts,tsx}",
        "!config/*.{js,jsx,ts,tsx}",
        "!main.{js,jsx,ts,tsx}",
        "!**/*.repository.{js,jsx,ts,tsx}",
        "!**/*.test.{js,jsx,ts,tsx}",
        "!**/node_modules/**",
        "!dist/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
        "global": {
            "branches": 30,
            "functions": 30,
            "lines": 30,
            "statements": 30
        }
    }
}